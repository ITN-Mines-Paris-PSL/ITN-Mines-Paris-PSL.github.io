---
import { Tick } from "@components/ui/icons";
import SquareRoundedCheck from "@components/ui/icons/square-rounded-check.astro";

import Link from "@components/ui/link.astro";

const { card } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <p class="mt-3 text-4xl md:text-4xl font-bold text-black">
        {card.name}
      </p>
    </div><ul class="grid mt-8 text-left gap-y-4">
      {
        card.features.map((item) => (
          <li class="flex items-start gap-3 text-gray-800">
            <SquareRoundedCheck class="w-6 h-6" />
            <span>{item}</span>
          </li>
        ))
      }
    </ul><div class="flex mt-8">
      <!--
      <Link
        href={card.button.link || "#"}
        block
        style={card.popular ? "primary" : "outline"}>
        {card.button.text || "Get Started"}
      </Link>
      -->
    </div>
  </div>
</div>
