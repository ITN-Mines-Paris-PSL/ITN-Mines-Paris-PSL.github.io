---
import { Image } from "@astrojs/image/components";
import Tag from "@components/named-tag.astro"
import { Picture } from "@astrojs/image/components";
import Link from "@components/ui/card-link.astro";
import { Icon } from "astro-icon";

import Brigitte from "assets/portraits/brigitte-dandrea-novel.jpg"

const { attrs } = Astro.props;
const { name, role, email, image, skills } = attrs;

const emailHref = "mailto:${email}?cc=itn@minesparis.psl.eu&subject=[ITN]"


---

<div class="flex gap-6">
  <Image
    src={Brigitte}
    alt="Brigitte d'Andrea-Novel"
    width=168
    height=168
    loading="eager"
    format="avif"
    class="rounded inline-block"
  />
  <div>
    <div class="mb-[4px]">
      <div class="font-semibold text-2xl text-slate-900 relative">
        <span class="mr-4">{name}</span>
        <a href={emailHref}>
          <span class="hover:text-blue-600 transition-colors">
            <Icon
              class="w-4 h-4 inline relative"
              name="tabler:mail"
            />
          </span>
        </a>
      </div>
      <div>
        <span class="font-normal text-lg text-slate-500 mr-4">{role}</span>
      </div>
    </div>
    <div class="flex gap-2 mt-[16px]">
      {skills["Ingénierie Numérique"].map((skill) => <Tag type="Ingénierie Numérique">{skill}</Tag>)}
      {skills["Industries Créatives"].map((skill) => <Tag type="Industries Créatives">{skill}</Tag>)}
      {skills["Santé Numérique"].map((skill) => <Tag type="Santé Numérique">{skill}</Tag>)}
    </div>
  </div>
</div>
