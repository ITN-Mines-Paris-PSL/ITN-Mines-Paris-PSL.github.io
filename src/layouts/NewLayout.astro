---
import { SEO } from "astro-seo";

import Container from "@components/container.astro";
import SectionHead from "@components/sectionhead.astro";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import Sectionhead from "@components/sectionhead.astro";

interface Props {
  title?: string;
  description?: string;
  heading?: string;
  image?: string;
  type?: "website" | "article";
}

const url = Astro.url.href;

let { title, description, heading, image, type } = Astro.props;

title = title
  ? title + " | " + "ITN"
  : "Institut des Transformations Numériques";

description = description
  ? description
  : "Sciences et technologies du numérique à Mines Paris – PSL";

image = image ? image : "opengraph.png";
image = new URL("/itn-web/" + image, Astro.site).toString();

type = type ? type : "website";
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <!-- <base href={base} /> -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      canonical={url}
      openGraph={{
        basic: { title: heading ? heading : title, type, image },
        optional: { description },
      }}
      twitter={{
        title,
        description,
        image: image,
        creator: "@ITN_MinesParis",
        site: "@ITN_MinesParis",
        card: "summary_large_image",
      }}
    />
  </head><body>
    <Navbar />
    <Container>
      {
        heading ? (
          <Sectionhead>
            <Fragment slot="title">{heading}</Fragment>
            <Fragment slot="desc">{description}</Fragment>
          </Sectionhead>
        ) : undefined
      }
      <slot />
    </Container>
    <Footer />
    <style is:global>
      html {
        hyphens: auto;
      }
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
